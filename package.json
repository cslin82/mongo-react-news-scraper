{
  "name": "mongo-news-scraper",
  "version": "0.1.0",
  "description": "News Scraper using MongoDB",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cslin82/Mongo-News-Scraper.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.18.3"
  },
  "bugs": {
    "url": "https://github.com/cslin82/Mongo-News-Scraper/issues"
  },
  "homepage": "https://github.com/cslin82/Mongo-News-Scraper#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "moment": "^2.22.2",
    "mongoose": "^5.2.4",
    "morgan": "^1.9.0",
    "request": "^2.87.0"
  }
}
